.top_title {
  position: absolute;
  z-index: 998;
  height: 150rpx;
  width: 100%;
  line-height: 220rpx;
  background-color: rgba(100, 100, 100, 0.8);
  color: #fff;
  top: 0;
  left: 0;
  display: flex;
  align-items: center;
  padding-left: 60rpx;
}
.bottom {
  z-index: 999;
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 20%;
  color: #fff;
  background-color: rgba(100, 100, 100, 0.8);
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.bottom .bottom-catalogue,
.bottom .bottom-set {
  display: flex;
  align-items: center;
}

